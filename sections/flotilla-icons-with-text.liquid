{%- liquid
  case section.blocks.size
    when 2
      assign card_class = 'md:basis-1/2'
    when 3
      assign card_class = 'md:basis-1/3'
    when 4
      assign card_class = 'md:basis-1/4'
  endcase
-%}

<section class="bg-page" data-color-scheme="{{ section.settings.section_color_scheme }}">
  <div class="theme-section-padding" data-aid="icons-with-text--width-wrapper">
    <fade-slider
      data-name="scrollbar-target"
      mobile-indicator="true"
      swipe="true"
      blocks="true"
      class="block group relative{% if section.settings.section_width == 'narrow' %} max-w-content{% else %} max-w-fullwidth{% endif %}"
      tabindex="0">
      <ul
        class="grid md:flex md:justify-center md:items-start"
        data-name="fade-slider"
        data-armada-animation="grid-on-scroll">
        {% for block in section.blocks %}
          <li
            {{ block.shopify_attributes }}
            class="flex items-center justify-center row-start-1 col-start-1 scrollbar-sync first:pl-0 last:pr-0 md:px-xl {% if forloop.first %} z-[1]{% else %} opacity-0 z-0{% endif %} md:opacity-100 md:z-[1] {{ card_class }}"
            data-name="fade-slide"
            data-armada-animation="fade"
            data-fade-slider-index="{{ forloop.index0 }}"
            {% if forloop.first %}data-fade-slider-active{% endif %}>
            {% render 'ship-icon-and-text-card' with
             icon_image: block.settings.icon_image,
             text_alignment: section.settings.text_alignment,
             heading: block.settings.heading,
             text: block.settings.text,
             link_url: block.settings.link %}
          </li>
        {% endfor %}
      </ul>
      <template>
        <div data-name="mobile-indicator">
          {% render 'armament-scroll-bar' with classes: 'pb-0 md:hidden', item_count: section.blocks.size, parent: 'fade-slider', target: 'fade-slider', indicator: 'progress' %}
        </div>
      </template>
    </fade-slider>

    <safe-load-scripts>
      <script
        defer="defer"
        src="{{ 'engine-fade-slider.min.js' | asset_url }}"
        type="module"
        data-armada-load-key="fade-slider"></script>
    </safe-load-scripts>

  </div>
</section>

{% schema %}
  {
    "name": "Icons with text",
    "settings": [
      {
        "type": "select",
        "id": "text_alignment",
        "label": "Text alignment",
        "options": [
          {
            "value": "left",
            "label": "Left"
          }, {
            "value": "center",
            "label": "Center"
          }, {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "center"
      }, {
        "type": "header",
        "content": "Color scheme"
      }, {
        "type": "select",
        "id": "section_width",
        "label": "Section width",
        "info": "These changes may only be visible on larger screens",
        "options": [
          {
            "value": "full-with-padding",
            "label": "Full width with padding"
          }, {
            "value": "narrow",
            "label": "Narrow"
          }
        ],
        "default": "full-with-padding"
      }, {
        "type": "select",
        "id": "section_color_scheme",
        "label": "Color scheme",
        "options": [
          {
            "value": "general",
            "label": "General"
          }, {
            "value": "accent-1",
            "label": "Accent 1"
          }, {
            "value": "accent-2",
            "label": "Accent 2"
          }, {
            "value": "accent-3",
            "label": "Accent 3"
          }
        ],
        "default": "general"
      }
    ],
    "blocks": [
      {
        "type": "icon_with_text",
        "name": "Icon with text",
        "settings": [
          {
            "type": "image_picker",
            "id": "icon_image",
            "label": "Image"
          }, {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Describe key features"
          }, {
            "type": "text",
            "id": "text",
            "label": "Body text",
            "default": "Use this text to emphasise your brandâ€™s unique selling points."
          }, {
            "type": "url",
            "id": "link",
            "label": "Link"
          }
        ]
      }
    ],
    "max_blocks": 4,
    "presets": [
      {
        "name": "Icons with text",
        "blocks": [
          {
            "type": "icon_with_text"
          }, {
            "type": "icon_with_text"
          }, {
            "type": "icon_with_text"
          }
        ]
      }
    ],
    "disabled_on": {
      "groups": [
        "header",
        "custom.overlay",
        "custom.announcement"
      ]
    }
  }
{% endschema %}