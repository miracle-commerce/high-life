{% liquid
  assign search_type = search.types | join: ''
%}

{% if search.results.size > 0 %}
  {% if search_type == 'product' %}
    {% render 'flotilla-filters-topbar' with 
      enable_filtering: section.settings.enable_filtering, 
      enable_sorting: section.settings.enable_sorting,
      results: search,
      custom_classes: '!pb-0'
    %}
  {% endif %}
{% endif %}

{% schema %}
{
  "class": "max-w-max collection-main-filters",
  "name": "Search result filters",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_filtering",
      "label": "Enable filter",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_sorting",
      "label": "Enable sort",
      "default": true
    }
  ]
}
{% endschema %}
