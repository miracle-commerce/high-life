{% liquid 
  for block in section.blocks 
    case block.settings.icon_size 
      when 'small'
        assign icon_px_width = '18px'
      when 'large'
        assign icon_px_width = '24px'
    endcase
  endfor
%}

<section
  class="bg-page text-body relative w-screen section-collection-grid"
>

  {% render 'flotilla-collection-grid' with
      collection: collection,
      section_blocks: section.blocks,
      products_per_row: section.settings.products_per_row,
      products_per_row_mobile: 1,
      products_per_page: section.settings.products_per_page,
      grid_container_classes: 'theme-section-padding',
      has_pagination: true,
      pagination_type: section.settings.pagination_type,
      product_card_alignment: section.settings.product_card_alignment,
      enable_quick_view: false,
      grid_icon_size: icon_px_width
  %}

  <noscript>
    {% render 'flotilla-collection-grid-noscript' with grid_section: section, collection: collection, products_per_row: section.settings.products_per_row, products_per_row_mobile: 1, products_per_page: section.settings.products_per_page, has_pagination: true, pagination_type: 'paged' %}
  </noscript>
</section>

