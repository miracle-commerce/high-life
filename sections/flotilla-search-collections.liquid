      "id": "overlay_color_scheme",
      "label": "Overlay color scheme",
      "options": [
        {
          "value": "bg-white",
          "label": "Light"
        },
        {
          "value": "bg-black",
          "label": "Dark"
        }
      ],
      "default": "bg-black"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Overlay opacity",
      "unit": "%",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 20
    },
    {
      "type": "select",
      "id": "text_overlay_color_scheme",
      "label": "Text overlay color scheme",
      "options": [
        {
          "value": "general",
          "label": "General"
        },
        {
          "value": "accent-1",
          "label": "Accent 1"
        },
        {
          "value": "accent-2",
          "label": "Accent 2"
        },
        {
          "value": "accent-3",
          "label": "Accent 3"
        }
      ],
      "default": "accent-1"
    },
    {
      "type": "select",
      "id": "vertical_text_alignment",
      "label": "Vertical text position",
      "options": [
        {
          "value": "top",
          "label": "Top"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "bottom",
          "label": "Bottom"
        }
      ],
      "default": "bottom"
    },
    {
      "type": "select",
      "id": "horizontal_text_alignment",
      "label": "Horizontal text position",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Shop now"
    },
    {
      "type": "radio",
      "id": "button_style",
      "label": "Button style",
      "options": [
        {
          "value": "filled",
          "label": "Primary"
        },
        {
          "value": "outline",
          "label": "Secondary"
        }
      ],
      "default": "filled"
    }
  ]
}
{% endschema %}
