      "max": 5,
      "step": 1,
      "default": 3
    },
    {
      "type": "radio",
      "id": "collections_per_row_mobile",
      "label": "Collections per row (mobile)",
      "options": [
        {
          "value": "1",
          "label": "1"
        },
        {
          "value": "2",
          "label": "2"
        }
      ],
      "default": "1"
    },
    {
      "type": "header",
