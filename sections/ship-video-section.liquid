{% liquid
  assign image_classes = 'object-cover w-full'

  case section.settings.text_alignment
    when 'center'
      assign text_align_class = 'text-center'
    when 'right'
      assign text_align_class = 'text-right'
  endcase
%}

<section
  class="bg-page text-body {% unless section.settings.section_width == 'full' %} theme-section-padding{% endunless %}"
  data-color-scheme="{{ section.settings.section_color_scheme }}"
>
  {% if section.settings.section_width == 'narrow' %}<div class="max-w-content">{% endif %}
  {% if section.settings.subheading != blank or section.settings.heading != blank %}
    <div class="{{ text_align_class }}">
      {% if section.settings.subheading != blank %}
        {% render 'armament-heading' with tag: 'h4', heading_content: section.settings.subheading, heading_type: 'heading-4', data_aid: 'video-subheading' %}
      {% endif %}
      {% if section.settings.heading != blank %}
        {% render 'armament-heading' with tag: 'h2', heading_content: section.settings.heading, heading_type: 'section-heading', data_aid: 'video-heading' %}
      {% endif %}
    </div>
  {% endif %}

  {% if section.settings.video_url != blank %}
    {% assign extra_vars = 'modestbranding=1&rel=0' %}
    {% if section.settings.video_url contains '?' %}
      {% assign url = section.settings.video_url | append: '&' | append: extra_vars %}
    {% else %}
      {% assign url = section.settings.video_url | append: '?' | append: extra_vars %}
    {% endif %}
    {% render 'armament-video' with url: url, poster: section.settings.fallback_image, autoplay: true, loop: false, is_hero: false, attributes: 'data-aid="video"', classes: 'h-full', image_classes: image_classes, color_scheme: section.settings.section_color_scheme %}
  {% endif %}
  {% if section.settings.section_width == 'narrow' %}</div>{% endif %}
</section>

{% schema %}
{
  "name": "Video",
  "settings": [
    {
      "type": "header",
      "content": "Color scheme"
    },
    {
      "type": "select",
      "id": "section_color_scheme",
      "label": "Color scheme",
      "options": [
        {
          "value": "general",
          "label": "General"
        },
        {
          "value": "accent-1",
          "label": "Accent 1"
        },
        {
          "value": "accent-2",
          "label": "Accent 2"
        },
        {
          "value": "accent-3",
          "label": "Accent 3"
        }
      ],
      "default": "general"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Heading alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "text",
      "id": "video_url",
      "label": "Video link",
      "info": "Accepts YouTube, Vimeo and MP4",
      "default": "https://www.youtube.com/watch?v=_9VUPq3SxOc"
    },
    {
      "type": "image_picker",
      "id": "fallback_image",
      "label": "Poster image",
      "info": "Displays before the video is loaded"
    },
    {
      "type": "select",
      "id": "section_width",
      "label": "Section width",
      "info": "These changes may only be visible on larger screens",
      "options": [
        {
          "value": "full",
          "label": "Full width"
        },
        {
          "value": "full-with-padding",
          "label": "Full width with padding"
        },
        {
          "value": "narrow",
          "label": "Narrow"
        }
      ],
      "default": "full-with-padding"
    }
  ],
  "presets": [
    {
      "name": "Video",
      "settings": {
      }
    }
  ],
  "disabled_on": {
    "groups": [
      "header",
      "footer",
      "custom.overlay",
      "custom.announcement"
    ]
  }
}
{% endschema %}