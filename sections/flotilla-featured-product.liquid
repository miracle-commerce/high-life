{%- capture get_blocks -%}
  {%- for block in section.blocks -%}
    {{ block.type | lstrip }}{%- unless forloop.last -%},{%- endunless -%}
  {%- endfor -%}
{%- endcapture -%}
{% assign block_order = get_blocks | join: ',' | lstrip | strip %}

{%- liquid
  if product
    assign featured_product = product
    assign is_quick_view = true
    assign product_form_classes = "p-2xl"
    assign color_scheme = settings.quick_view_color_scheme
    assign gallery_style = settings.quick_view_gallery_style
    assign quick_view_gallery_class = 'py-2xl'
  else
    assign featured_product = all_products[section.settings.product]
    assign is_quick_view = false
    assign product_form_classes = "pt-xl px-xl lg:pt-0 lg:px-0 lg:pl-2xl"
    assign color_scheme = section.settings.section_color_scheme
    assign gallery_style = section.settings.gallery_style
  endif
-%}

<div class="text-body bg-page theme-section-padding" data-color-scheme="{{ color_scheme }}">
<section {% unless is_quick_view %}class="max-w-content"{% endunless %}>
  {% unless is_quick_view %}
    {% if section.settings.subheading != blank or section.settings.heading != blank %}
      <div class="text-{{ section.settings.heading_alignment }}">
        {% if section.settings.subheading != blank %}
          {% render 'armament-heading' with tag: 'h4', heading_content: section.settings.subheading, heading_type: 'heading-4', data_aid: 'featured-product-subheading' %}
        {% endif %}
        {% if section.settings.heading != blank %}
          {% render 'armament-heading' with tag: 'h2', heading_content: section.settings.heading, heading_type: 'section-heading', data_aid: 'featured-product-subheading' %}
        {% endif %}
      </div>
    {% endif %}
  {% endunless %}
  <div class="flex flex-col lg:flex-row">
    <div class="product-main-gallery grow max-w-full {{ quick_view_gallery_class }}">
      <div class="w-full">
        {% if section.settings.product == blank and is_quick_view == false %}
          {% render 'armament-placeholder' with name: 'product-1' %}
        {% elsif featured_product.media.size == 0 %}
          {% render 'armament-placeholder' with name: 'product-1' %}
        {% elsif featured_product.media.size == 1 %}
          <div class="relative">
            {% render 'armament-product-media' with media: featured_product.media[0], title: featured_product.title, product_id: featured_product.id %}
            {% if settings.custom_badges %}
              <div class="absolute top-s ld:top-l left-0 z-50 pointer-events-none">
                {% render 'engine-badges' with badges_product: featured_product %}
              </div>
            {% endif %}
          </div>
        {% elsif gallery_style == 'thumbnails' %}
          {% render 'ship-product-thumbnail-gallery' with gallery_product: featured_product, scope_id: section.id %}
        {% else %}
          {% render 'ship-product-slider-gallery' with slider_product: featured_product, scope_id: section.id %}
        {% endif %}
      </div>
    </div>
    <div class="product-main-form grow max-w-full {{ product_form_classes }}" data-armada-animation="grid-on-scroll">
      <div class="w-full" data-armada-animation="grid-item">
        {% if section.settings.product == blank and is_quick_view == false %}
          {% render 'armament-heading' with heading_content: 'Product name', heading_type: 'heading-3', data_aid: 'featured-product-placeholder-title' %}
          <div class="mb-l md:mb-xl">
            {% render 'armament-price' with manual_price: 1999, price_only: true, discount_type: settings.show_discount_savings, show_tax_included: true, price_is_heading: true %}
          </div>
          {% assign quantity_id = 'no-js-quantity-' | append: form_product.id | append: '-' | append: section.id %}
          {% render 'armament-quantity-selector' with quantity_input_classes: 'quantity-no-js-quantity', id: quantity_id, product_name: 'example product', name: 'quantity', value: '1', min: '1', classes: 'mb-l md:mb-xl', label: 'Quantity' %}
          <div>
            {% assign sold_out_string = 'products.product.sold_out' | t %}
            {% render 'armament-button' with type: 'submit', content: sold_out_string, attributes: 'disabled', classes: 'w-full', style: 'outline' %}
          </div>
        {% else %}
          {% render 'ship-product-form' with form_product: featured_product, scope_id: section.id, dynamic_buttons: settings.show_smart_checkout, block_order: block_order, option_classes: 'flex flex-col', select_wrapper_classes: 'w-full mb-l md:mb-xl' button_style: 'outline', price_classes: 'mb-l md:mb-xl', regular_price_classes: 'text-h4 font-heading heading-font-styles leading-none', is_quick_view: is_quick_view, option_type: 'buttons' %}
          <a class="text-h6 font-heading heading-font-styles underline" href="{{ featured_product.url }}" data-armada-animation="text">{{ 'sections.featured_product.view_product' | t }}</a>
        {% endif %}
      </div>
    </div>
  </div>
</section>
</div>


