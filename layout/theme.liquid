<!doctype html>
<html
  class="no-js"
  lang="{{ request.locale.iso_code }}"
  data-body-size="{{ settings.body_size }}"
  data-headings-size="{{ settings.headings_size }}"
  data-headings-case="{{ settings.headings_case }}"
  data-headings-line-height="{{ settings.headings_line_height }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <link
      rel="preconnect"
      href="https://cdn.shopify.com"
      crossorigin>
    <link
      rel="preconnect"
      href="https://ajax.googleapis.com"
      crossorigin>

    {%- unless settings.body_font.system? -%}
      <link
        rel="preload"
        as="font"
        href="{{ settings.body_font | font_url }}"
        type="font/woff2"
        crossorigin>
    {%- endunless -%}
    {%- unless settings.headings_font.system? -%}
      <link
        rel="preload"
        as="font"
        href="{{ settings.headings_font | font_url }}"
        type="font/woff2"
        crossorigin>
    {%- endunless -%}

    <link
      rel="preload"
      href="{{ 'theme.css' | asset_url }}"
      as="style">
    <link rel="modulepreload" href="{{ 'theme.min.js' | asset_url }}">

    {%- if canonical_url != blank -%}
      <link rel="canonical" href="{{ canonical_url }}">
    {%- endif -%}

    {%- if settings.favicon != blank -%}
      <link
        rel="icon"
        type="image/png"
        href="{{ settings.favicon | image_url: width: 32, height: 32 }}">
    {%- endif -%}

    {%- liquid
      render 'armament-seo-title'
      render 'armament-social-meta'
      render 'armament-fonts'
      render 'css-variables'
      render 'armament-essential-css'
    -%}

    {{ content_for_header }}

    <script>
      document.documentElement.className = document.documentElement.className.replace('no-js', 'js');
    </script>
  </head>

  <body class="template-{{ request.page_type | handle }} relative bg-page text-base font-body font-body-weight font-body-style overflow-x-hidden"{% if settings.cart_type == 'page' %} data-armada-cart-type-page="true" data-cart-url="{{ routes.cart_url }}"{% endif %}>
    {% render 'engine-animation' with animation_delay: 100 %}
    {{ 'theme.css' | asset_url | stylesheet_tag }}
    {{ 'custom.css' | asset_url | stylesheet_tag }}
    {%- if settings.custom_css != blank -%}
      <style>
        {{ settings.custom_css }}
      </style>
    {%- endif -%}

    {% sections 'announcement-group' %}

    {% comment %} --armada-header-- {% endcomment %}
    <section class="block sticky-header relative" data-armada-header-wrapper>
      {% sections 'header-group' %}
    </section>

    <main
      class="main-content max-w-full overflow-x-hidden !h-auto"
      role="main"
      tabindex="-1"
      data-template-type="{{ request.page_type | handle }}">
      {{ content_for_layout }}
    </main>

    {% comment %} --armada-footer-- {% endcomment %}
    {% sections 'footer-group' %}
    {% sections 'overlay-group' %}
    {% render 'engine-translations' %}

    <script type="module" src="{{ 'theme.min.js' | asset_url }}"></script>
    <script type="module" src="{{ 'custom.js' | asset_url }}"></script>
    {%- if settings.custom_js != blank -%}
      <script type="module">
        {{ settings.custom_js }}
      </script>
    {%- endif -%}
  </body>
</html>